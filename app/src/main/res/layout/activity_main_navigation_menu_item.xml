<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="@null"
    tools:ignore="Overdraw">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:divider="@null"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/navMenuButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_15dp"
            android:gravity="start"
            android:paddingLeft="@dimen/common_60dp"
            android:paddingRight="@dimen/common_60dp"
            android:paddingTop="@dimen/common_12dp"
            android:textSize="@dimen/text_size_18sp"
            android:background="@color/colorSigninBtn"
            android:focusable="false"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/colorWhiteText"
            tools:text="@string/app_name" />

        <ImageView
            android:id="@+id/navButtonIcon"
            android:layout_width="@dimen/common_30dp"
            android:layout_height="@dimen/common_30dp"
            android:gravity="start"
            android:layout_marginStart="@dimen/common_20dp"
            android:layout_marginLeft="@dimen/common_20dp"
            android:layout_marginTop="@dimen/common_8dp"
            app:srcCompat="@mipmap/app_icon"
            android:elevation="@dimen/common_2dp"
            android:contentDescription="@string/top_bar_back_button_content_description"
            tools:ignore="UnusedAttribute"/>
    </RelativeLayout>
</LinearLayout>