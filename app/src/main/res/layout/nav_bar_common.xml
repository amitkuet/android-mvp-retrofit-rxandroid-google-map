<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/navBarBg"
    android:elevation="4dp"
    app:theme="@style/ToolbarColoredBackArrow"
    android:textColor="@color/colorWhiteText"
    android:title="@string/nav_header"
    app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_marginLeft="@dimen/common_25dp"
        android:layout_marginStart="@dimen/common_25dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="@integer/weight_1"
            android:layout_marginRight="@dimen/common_25dp"
            android:layout_marginEnd="@dimen/common_40dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/navBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_header"
                android:textColor="@color/colorWhiteText"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/common_15dp"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/common_15dp"
            android:paddingEnd="@dimen/common_15dp"
            android:paddingLeft="@dimen/common_15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/messageBtn"
                android:layout_width="@dimen/common_30dp"
                android:layout_height="@dimen/common_40dp"
                android:paddingTop="@dimen/common_5dp"
                android:scaleType="fitXY"
                android:layout_gravity="end"
                app:srcCompat="@mipmap/ic_chat_white_48dp"
                tools:ignore="ContentDescription"/>

        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.Toolbar>